cfgit() {
    /usr/bin/git \
        --git-dir="$HOME"/.dotfiles \
        --work-tree="$HOME" \
        "$@"
}

# https://github.com/marp-team/marp-cli
# slides <file.md> --pdf
slides() {
    docker run \
        --rm \
        --init \
        -v "$(readlink -f "$1" | xargs dirname)":/home/marp/app \
        -e MARP_USER="$(id -u):$(id -g)" \
        -e LANG="$LANG" \
        marpteam/marp-cli \
        /home/marp/app/"$(basename "$1")" \
        "$@"
}

otp() {
    ykman oath accounts code "$@"
}
